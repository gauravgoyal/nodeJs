<!DOCTYPE html>
<html>
<head>
  <title>My Todo App</title>
</head>
  <body>
  <%if (typeof(editTodo) === 'undefined') {%>
    <h1>Todo List</h1>
  <%} else {%>
    <h1>Editing <%= editTodo %></h1>
  <% } %>
  <ul>
    <% todolist.forEach(function(todo, index) { %>
      <li><a href="/todo/edit/<%= index %>">✓</a> <a href="/todo/delete/<%= index %>">✘</a> <%= todo %></li>
    <% }); %>
  </ul>
  <form action="/todo/add/" method="post">
    <p>
      <label for="newtodo">What shoud I do?</label>
      <%if (typeof(id) !== 'undefined') {%>
        <input type="hidden" name="key" id="key" value="<%= id %>" />
      <% } %>
      <input type="text" name="newtodo" id="newtodo" value="<%if (typeof(editTodo) !== 'undefined') {%><%= editTodo %><% } %>" autofocus />
      <input type="submit" />
    </p>
  </form>
  </body>
</html>
